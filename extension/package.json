{
  "name": "devsentinel",
  "displayName": "DevSentinel",
  "description": "Code Review & Architecture Assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devsentinel.review",
        "title": "DevSentinel: Review Changes"
      },
      {
        "command": "devsentinel.roast",
        "title": "DevSentinel: Roast My Code"
      }
    ],
    "configuration": {
      "title": "DevSentinel",
      "properties": {
        "devsentinel.backendUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8000",
          "description": "URL of the DevSentinel Python Backend"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.13.5"
  }
}
